<?xml version="1.0"?>
 
<project name="TestSuiteInterface" default="CreateExecutableJarFile">

	<target name="CreateExecutableJarFile">
		<delete file="../tgPrinter.jar"/>
		<jar destfile="../tgPrinter.jar" duplicate="preserve" index="true">
			<fileset dir="src" />
			<fileset dir="bin" />
			<fileset dir=".">
			    <include name="License_lgpl-3.0.txt"/>
			</fileset>
			<zipfileset src="lib/TestSuite.jar" />
			<manifest>
				<attribute name="Main-Class" value="org.testtoolinterfaces.testsuiteinterface.TestGroupPrinter" />
		        <attribute name="Created-By" value="TestToolInterfaces.org"/>
		        <attribute name="Built-By" value="${user.name}"/>
		        <attribute name="Implementation-Title" value="Test Tool Interfaces - Test Group Printer" />
		        <attribute name="Implementation-Version" value="${version.num}.${build.number}"/> 
		        <attribute name="Implementation-Vendor" value="Open Source - Arjan Kranenburg" />
		        <attribute name="Specification-Title" value="Test Tool Interfaces - Suite Interface" />
		        <attribute name="Specification-Version" value="0.2" />
		        <attribute name="Specification-Vendor" value="TestToolInterfaces.org" />
		    </manifest>
		</jar>
	</target>
</project>
